# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sapine_bots

# JWT Secret (REQUIRED - generate with: openssl rand -hex 32)
# SECURITY: Never use the same secret in production and development
# SECURITY: Never commit your actual secret to version control
JWT_SECRET_KEY=GENERATE_A_RANDOM_SECRET_KEY_HERE_USE_openssl_rand_hex_32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Bot Storage
BOT_STORAGE_PATH=/var/lib/bots

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Server
HOST=0.0.0.0
PORT=8000
